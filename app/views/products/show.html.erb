<br>
<div class="container">
  <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
    <div class="row">
      <div class="col col-lg-6 col-sm-12">
        <h1><b><%= @product.title_ru.upcase %></b></h1>
        <hr>
        <%= @product.desc_ru %>
        <hr>
        <%= @product.country.name_ru %>
        <br>
        <%= @product.manufacturer.name %>
        <br>
        <%= @product.category.title_ru %>
        <hr>
        <%= @product.price %>
      </div>
      <div class="col col-lg-6 col-sm-12">
        <%= image_tag(@product.image, class:"img-thumbnail") %>
      </div>
    </div>

  </div>
</div>
