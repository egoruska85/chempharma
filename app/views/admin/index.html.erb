<center><h1>Административная панель управления сайта</h1></center>

<div class="container">
<div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
  <center>
    <%= form_for :product, url: products_path do |f| %>
      <%= f.label 'Наименование на русском' %>

      <%= f.text_field :title_ru, class:'form-control', style:'width: 400px;'%>
      <br>
      <%= f.label 'Наименование на английском' %>
      <%= f.text_field :title_en, class:'form-control', style:'width: 400px;'%>
      <hr>
      <br>
      <%= f.label 'Описание на русском' %>

      <%= f.text_area :desc_ru, class:'form-control', style:'width: 400px;'%>
      <br>
      <%= f.label 'Описание на английском' %>
      <%= f.text_area :desc_en, class:'form-control', style:'width: 400px;'%>
      <hr>
      <br>
      <div class="row">
        <div class="col">
          <%= f.select :country_id, options_for_select(@countries.collect{ |country| [country.name_ru, country.id] }), {}, {class: "form-control", style:"width: 300px"} %>
        </div>
        <div class="col">
          <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">Добавить страну</button>
        </div>
      </div>



      <hr>
      <div class="row">
        <div class="col">
          <%= f.select :category_id, options_for_select(@categories.collect{ |cat| [cat.title_ru, cat.id] }), {}, {class: "form-control", style:"width: 300px"} %>
        </div>
        <div class="col">
          <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling1" aria-controls="offcanvasScrolling1">Добавить категорию</button>
        </div>
      </div>

      <hr>
      <div class="row">
        <div class="col">
          <%= f.select :manufacturer_id, options_for_select(@manufacturers.collect{ |cat| [cat.name, cat.id] }), {}, {class: "form-control", style:"width: 300px"} %>
        </div>
        <div class="col">
          <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasTop" aria-controls="offcanvasTop">Добавить Производителя</button>
        </div>
      </div>
      <hr>
      <%= f.label 'Цена' %>
      <%= f.number_field :price, class:'form-control', style:'width: 400px;', placeholder:'$'%>
      <hr>
      <div class="mb-6 row" style="width:800px;">
        <div class="col">
          <label for="formFile" class="form-label">Главное изображение</label>
          <%= f.file_field :image, class:'form-control', type:"file", id:"formFile" %>
        </div>
        <div class="col">
          <label for="formFile" class="form-label">Доболнительные изображения</label>
          <%= f.file_field :images, multiple: true, class:'form-control' %>
        </div>
      </div>

      <hr>
      <%= f.submit 'Добавить', class:'btn btn-success' %>
    <% end %>


  </center>






</div>


<div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Добавить страну</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="width: 365px;">
        <%= form_for :country, url: countries_path do |f| %>
          <center>
            <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="width: 320px;">
              <b>Страны/Countries</b>
              <hr>
              <% @countries.each do |country| %>
                <p><%= country.name_ru %>/<%= country.name_en %></p>
              <% end %>
            </div>
          </center>

            <%= f.text_field :name_ru, class:'form-control', placeholder:'Новая страна на русском' %>
            <hr>


            <%= f.text_field :name_en, class:'form-control', placeholder:'Новая страна на английском' %>
            <hr>
            <%= f.button 'Добавить', class:'btn btn-success' %>

        <% end %>
    </div>
  </div>
</div>
<div class="offcanvas offcanvas-end" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling1" aria-labelledby="offcanvasScrollingLabel1">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Добавить страну</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="width: 365px;">
        <%= form_for :category, url: categories_path do |f| %>
          <center>
            <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="width: 320px;">
              <b>Категории/Categories</b>
              <hr>
              <% @categories.each do |category| %>
                <p><%= category.title_ru %>/<%= category.title_en %></p>
              <% end %>
            </div>
          </center>

            <%= f.text_field :title_ru, class:'form-control', placeholder:'Новая категория на русском' %>
            <hr>


            <%= f.text_field :title_en, class:'form-control', placeholder:'Новая категория на английском' %>
            <hr>
            <%= f.button 'Добавить', class:'btn btn-success' %>

        <% end %>
    </div>
  </div>
</div>
<div class="offcanvas offcanvas-top" tabindex="-1" id="offcanvasTop" aria-labelledby="offcanvasTopLabel">
  <br>
  <div class="container">

      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasTopLabel">Добавить страну</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>

      </div>
      <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
      <div class="offcanvas-body">
        <b>Производители</b><br>
        <% @manufacturers.each do |manufacturer| %><%= manufacturer.name %> <% end %>
      <hr>
      <%= form_for :manufacturer, url: manufacturers_path, class:'row g-3' do |f| %>

  <div class="col-auto">
    <label for="staticEmail2" class="visually-hidden">Email</label>
    <input type="text" readonly class="form-control-plaintext" id="staticEmail2" value="">
  </div>
  <div class="col-auto">
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="col-auto">

    <%= f.button 'Добавить', class:'btn btn-success mb-1' %>
  </div>
  <% end %>
    </div>
      </div>
    </div>
  </div>

</div>
</div>
